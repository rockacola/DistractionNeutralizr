{
  "name": "Distraction Neutralizr",
  "description": "Google Chrome extension to actively remove 'distraction contents' from the web page.",
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "version": "2.0.0",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": ["scripts/bg/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Distraction Neutralizr"
  },
  "manifest_version": 2
}
